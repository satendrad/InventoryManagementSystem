<%if @products.present?%>
	<h1> Available Products </h1>

	<table class="table">
	  <thead>
	    <tr>
	      <th scope="col">#Id</th>
	      <th scope="col">Name</th>
	      <th scope="col">SKU</th>
	      <th scope="col">Price</th>
	      <th scope="col">Stock Availablity</th>
	      <th scope="col"></th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @products.each do |product|%>
	  		<tr>
	        <td><%= product.id %></td>
	        <td><%= product.name %></td>
	        <td><%= product.sku %></td>
	        <td><%= product.price %></td>
	        <td><%= product.stock_quantity %></td>
	        <td><%= link_to 'Show', product %> | <%= link_to 'Edit', edit_product_path(product) %> | <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>

	  	<% end %>
	  </tbody>
	</table>
<%else%>
	<h2>No Product available</h2>
<%end%>

<%= link_to 'New Product', new_product_path %>
